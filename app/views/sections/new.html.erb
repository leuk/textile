<h1>New section</h1>

<% form_for(@section , :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :keywords %><br />
    <%= f.text_area :keywords %>
  </p>
  <p>
    <%= f.label :meta %><br />
    <%= f.text_area :meta %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content , :class => 'rich_text_editor' %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.check_box :status %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', sections_path %>